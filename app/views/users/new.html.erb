<%= form_for @user do |f| %>
	<% if @user.errors.any? %>
	    <div class="error_messages">
	      <h2>Form is invalid</h2>
	      <ul>
	        <% for message in @user.errors.full_messages %>
	          <li><%= message %></li>
	        <% end %>
	      </ul>
	    </div>
	<% end %>
	 <div>
	 	<%= f.collection_select :role, User::ROLES, :to_s, :humanize %>
	 </div>
	<div>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<div>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</div>
	<div>
		<%= f.label :password %>
		<%= f.text_field :password %>
	</div>
	<div>
		<%= f.label :again %>
		<%= f.text_field :password_confirmation %>
	</div>
	<%= f.submit %>
<% end %>